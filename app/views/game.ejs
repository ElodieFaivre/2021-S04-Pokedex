<%- include("./partials/header") %>
<main class="game_container">
    <h2>Quel est le nom de ce pokemon ? </h2>

    <img class="game_container_img" src="/img/<%=pokemon.numero%>.png" alt="image de <%=pokemon.nom%>">

    <%if (isWinner){%>
        <p class="game_text bravo">Bravo !!! Tu as gagné en <%=tempt%> essai(s)</p>
        <a class="link" href="/pokemon/<%=pokemon.numero%>"> Voir les détails de ce pokemon </a>
    <%}else{%>
    <form method="post">
                    <input type="text" name="nameToGuess" value="<%=pokemon.nom%>" hidden>
                    <input type="number" name="tempt" value="<%=tempt%>" hidden>
                    <input type="text" name="name">
                    <button>Valider</button>
                    <p class="game_text"> Nombre de tentatives : <%=tempt%></p>
  
                   
    </form>
    <%}%>

    <a class="replay_button" href="/game">Rejouer</a>
</main>